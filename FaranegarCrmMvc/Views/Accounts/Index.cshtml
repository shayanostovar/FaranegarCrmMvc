@model IEnumerable<FaranegarCrmMvc.Models.Account>
@{
    ViewData["Title"] = "طرف حساب";
}
<h2>طرف حساب</h2>
<p><a class="btn btn-success" asp-action="Create">افزودن</a></p>
<table class="table table-striped">
    <thead><tr><th>نام</th><th>کد</th><th>تلفن</th><th>ایمیل</th><th></th></tr></thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Code</td>
                <td>@a.Phone</td>
                <td>@a.Email</td>
                <td><a asp-action="Edit" asp-route-id="@a.Id">ویرایش</a></td>
            </tr>
        }
    </tbody>
</table>
