@model IEnumerable<FaranegarCrmMvc.Models.Account>
@{
    ViewData["Title"] = "طرف حساب";

    // اگر page/pageSize در Query باشد، شماره ردیف بر اساس آن ادامه پیدا می‌کند
    var i = 0;
    var start = 0;
    if (int.TryParse(Context.Request.Query["page"], out var page) &&
        int.TryParse(Context.Request.Query["pageSize"], out var pageSize) &&
        page > 0 && pageSize > 0)
    {
        start = (page - 1) * pageSize;
    }
}

<h2 class="px-3">@ViewData["Title"]</h2>

<p class="px-3">
    <a class="btn btn-success" asp-action="Create">افزودن</a>
</p>

<div class="table-responsive w-100 px-3">
    <table class="table table-striped table-bordered table-sm align-middle w-100">
        <thead>
            <tr>
                <th style="width:80px;">ردیف</th>
                <th>نام</th>
                <th>کد</th>
                <th>تلفن</th>
                <th>ایمیل</th>
                <th style="width:120px;">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@(start + (++i))</td>
                    <td>@a.Name</td>
                    <td class="ltr nowrap">@a.Code</td>
                    <td class="ltr nowrap">@a.Phone</td>
                    <td class="ltr nowrap">@a.Email</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@a.Id">ویرایش</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* وسط‌چین کل جدول */
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    /* جلوگیری از شکستن خط برای کد/تلفن/ایمیل */
    .nowrap {
        white-space: nowrap;
    }

    /* نمایش صحیح اعداد/ایمیل از چپ به راست */
    .ltr {
        direction: ltr;
        unicode-bidi: plaintext;
    }
</style>
