@{
    Layout = null;
}
<!doctype html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - Faranegar CRM</title>

    <!-- Bootstrap RTL -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css">

    <!-- (اختیاری) تم Bootswatch برای ظاهر شیک‌تر؛ اگر نخواستی حذفش کن -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/lux/bootstrap.min.css">

    <!-- آیکن‌ها -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- فونت فارسی -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vazirmatn@33.0.3/Vazirmatn-font-face.css">

    <style>
        :root {
            /* 🎯 رنگ‌های سازمانی */
            --brand-main: #485a85; /* آبیِ سازمانی */
            --brand-accent: #d6a75e; /* طلاییِ سازمانی */
            /* تزریق به متغیرهای بوت‌استرپ */
            --bs-primary: var(--brand-main);
            --bs-secondary: var(--brand-accent);
            /* لینک‌ها */
            --bs-link-color: var(--brand-main);
            --bs-link-hover-color: #3b4a6b; /* کمی تیره‌تر از اصلی */
        }

        body {
            font-family: Vazirmatn, "Segoe UI", Roboto, Arial, sans-serif;
            background: #f8f9fa;
        }

        .container, .container-fluid {
            max-width: 100%;
        }

        /* هدِر چسبان */
        .app-navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .app-main {
            padding: 1rem;
        }

        /* ===== سفت‌وسخت‌ کردن رنگ برند روی مؤلفه‌های مهم ===== */

        /* دکمه‌ها (Primary) */
        .btn-primary {
            --bs-btn-bg: var(--brand-main);
            --bs-btn-border-color: var(--brand-main);
            --bs-btn-hover-bg: #3b4a6b;
            --bs-btn-hover-border-color: #3b4a6b;
            --bs-btn-active-bg: #2f3c57;
            --bs-btn-active-border-color: #2f3c57;
            --bs-btn-disabled-bg: var(--brand-main);
            --bs-btn-disabled-border-color: var(--brand-main);
        }

        .btn-outline-primary {
            --bs-btn-color: var(--brand-main);
            --bs-btn-border-color: var(--brand-main);
            --bs-btn-hover-bg: var(--brand-main);
            --bs-btn-hover-border-color: var(--brand-main);
        }

        /* دکمه‌های Secondary (طلایی) */
        .btn-secondary {
            --bs-btn-bg: var(--brand-accent);
            --bs-btn-border-color: var(--brand-accent);
            --bs-btn-hover-bg: #c2914b;
            --bs-btn-hover-border-color: #c2914b;
        }

        .btn-outline-secondary {
            --bs-btn-color: var(--brand-accent);
            --bs-btn-border-color: var(--brand-accent);
            --bs-btn-hover-bg: var(--brand-accent);
            --bs-btn-hover-border-color: var(--brand-accent);
        }

        /* نوار بالا */
        .navbar.bg-primary,
        .navbar.navbar-dark.bg-primary {
            background-color: var(--brand-main) !important;
        }

        /* تیتر جدول‌ها */
        .table thead th {
            background-color: var(--brand-main);
            color: #fff;
            border-color: #2f3c57 !important;
        }
        /* راه‌راه ملایم با رنگ برند */
        .table-striped > tbody > tr:nth-of-type(odd) {
            --bs-table-accent-bg: rgba(72,90,133,0.05);
        }

        /* پیجینیشن */
        .page-link {
            color: var(--brand-main);
        }

        .page-item.active .page-link {
            background-color: var(--brand-main);
            border-color: var(--brand-main);
        }

        /* مودال */
        .modal-header {
            background-color: var(--brand-main);
            color: #fff;
        }

            .modal-header .btn-close {
                filter: invert(1) grayscale(1);
            }

        /* Badge/Alert نمونه */
        .badge.bg-primary, .alert-primary {
            background-color: var(--brand-main) !important;
            border-color: var(--brand-main) !important;
        }

        .badge.bg-secondary, .alert-secondary {
            background-color: var(--brand-accent) !important;
            border-color: var(--brand-accent) !important;
        }

        /* کنترل‌های فرم (فوکس و چک‌باکس) */
        .form-control:focus {
            border-color: var(--brand-main);
            box-shadow: 0 0 0 .2rem rgba(72,90,133,.25);
        }

        .form-check-input:checked {
            background-color: var(--brand-main);
            border-color: var(--brand-main);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- نوار بالا -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary app-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Faranegar CRM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav" aria-controls="topNav" aria-expanded="false" aria-label="منو">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/SalesReports"><i class="bi bi-table me-1"></i>گزارش فروش</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Import"><i class="bi bi-upload me-1"></i>ایمپورت</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Accounts"><i class="bi bi-people me-1"></i>طرف حساب‌ها</a></li>
                    <li class="nav-item"><a class="nav-link" href="/CallLogs">تماس‌ها</a></li>

                </ul>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-light btn-sm" href="/SalesReports">لیست</a>
                    <a class="btn btn-light btn-sm" href="/Import">آپلود</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- محتوای اصلی -->
    <main class="app-main">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <!-- فوتر -->
    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container-fluid text-center small text-muted">
            © @DateTime.Now.Year - Faranegar CRM
        </div>
    </footer>

    <!-- Bootstrap Bundle (لازم برای مودال/کلاپس/Dropdown و …) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
